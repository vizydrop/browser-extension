{
  "manifest_version": 2,
  "name": "Vizydrop extension",
  "version" : "0.0.1",
  "icons" : {
    "16" : "img/icon16.png",
    "128" : "img/icon128.png"
  },
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16" : "img/icon16.png",
      "128" : "img/icon128.png"
    },
    "default_title": "Vizydrop",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions" : ["tabs", "activeTab", "contextMenus"]
}